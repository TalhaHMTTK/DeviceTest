<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card" style="width: 100%; max-width: 500px;">
    <div class="card-body">
      <h2 class="card-title text-center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'mb-3' }) do |f| %>
        <%= render "companies/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "companies/shared/links" %>
    </div>
  </div>
</div>
